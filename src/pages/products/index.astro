---
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import Header from '../../components/Header.astro';
import Hero from '../../components/Hero.astro';
import Icon from '../../components/Icon.astro';
import ProductCard from '../../components/ProductCard.astro';
import Section from '../../components/Section.astro';

const title = 'Open Source Products - Virtual Genius';
const description = 'Explore our open source tools for Domain-Driven Design: ContextFlow for context mapping and CodeCohesion for code visualization.';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
	</head>
	<body class="bg-white">
		<Header />

		<!-- Hero with EventStorming Digital Background -->
		<section class="relative w-full overflow-hidden" style="height: 360px;">
			<!-- Background Image -->
			<div class="absolute inset-0 w-full h-full">
				<img
					src="/images/nussbaum-eventstorming.png"
					alt="Digital EventStorming visualization"
					class="w-full h-full object-cover"
					style="filter: brightness(0.6); object-position: center 40%;"
				/>
				<!-- Dark overlay for text readability -->
				<div class="absolute inset-0 bg-gradient-to-b from-black/40 via-black/30 to-black/50"></div>
			</div>

			<!-- Content Overlay -->
			<div class="relative z-10 flex items-center justify-center h-full">
				<div class="max-w-screen-xl mx-auto px-6 w-full">
					<div class="text-center max-w-4xl mx-auto">
						<h1 class="text-5xl md:text-7xl font-bold mb-6 text-white drop-shadow-lg">
							Open Source Products
						</h1>
						<p class="text-2xl md:text-3xl mb-8 text-white/95 drop-shadow-md">
							Free, open-source tools for Domain-Driven Design and software architecture visualization
						</p>
					</div>
				</div>
			</div>
		</section>

		<!-- Products -->
		<Section>
			<div class="max-w-6xl mx-auto space-y-24">
				<!-- ContextFlow -->
				<div>
					<div class="mb-8">
						<img
							src="/images/contextflow/context-flow-3.png"
							alt="ContextFlow Screenshot"
							class="rounded-lg shadow-xl w-full"
						/>
					</div>
					<div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
						<div class="lg:col-span-2">
							<h2 class="text-3xl font-bold mb-4 text-vg-burgundy">ContextFlow</h2>
							<p class="text-lg text-vg-gray-dark mb-6">
								Visual DDD context mapper with Flow + Strategic views for analyzing bounded contexts, their relationships, and code ownership across your system architecture.
							</p>
							<div class="flex flex-wrap gap-4 mb-8">
								<a href="https://thepaulrayner.com/contextflow/" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-1 text-vg-red hover:text-vg-red-light font-semibold">
									View Demo
									<Icon name="arrow-right" size="sm" />
								</a>
								<a href="https://github.com/paulrayner/contextflow" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-1 text-vg-gray hover:text-vg-gray-dark font-semibold">
									<Icon name="github" size="sm" />
									GitHub
								</a>
								<a href="/products/contextflow" class="inline-flex items-center gap-1 text-vg-burgundy hover:text-vg-red font-semibold">
									Learn More
									<Icon name="arrow-right" size="sm" />
								</a>
							</div>
						</div>
						<div>
							<div class="bg-vg-gray-light p-6 rounded-lg">
								<h3 class="text-lg font-semibold mb-3 text-vg-burgundy">Key Features</h3>
								<ul class="space-y-2 text-sm text-vg-gray-dark">
									<li class="flex items-start gap-2">
										<span class="text-vg-red mt-1 flex-shrink-0">
											<Icon name="check" size="sm" />
										</span>
										<span>Dual synchronized views (Flow + Strategic)</span>
									</li>
									<li class="flex items-start gap-2">
										<span class="text-vg-red mt-1 flex-shrink-0">
											<Icon name="check" size="sm" />
										</span>
										<span>DDD relationship patterns</span>
									</li>
									<li class="flex items-start gap-2">
										<span class="text-vg-red mt-1 flex-shrink-0">
											<Icon name="check" size="sm" />
										</span>
										<span>Code ownership tracking</span>
									</li>
									<li class="flex items-start gap-2">
										<span class="text-vg-red mt-1 flex-shrink-0">
											<Icon name="check" size="sm" />
										</span>
										<span>Drag-and-drop editing</span>
									</li>
									<li class="flex items-start gap-2">
										<span class="text-vg-red mt-1 flex-shrink-0">
											<Icon name="check" size="sm" />
										</span>
										<span>Import/export JSON</span>
									</li>
									<li class="flex items-start gap-2">
										<span class="text-vg-red mt-1 flex-shrink-0">
											<Icon name="check" size="sm" />
										</span>
										<span>No backend required</span>
									</li>
								</ul>
							</div>
						</div>
					</div>
				</div>

				<!-- CodeCohesion -->
				<div>
					<div class="mb-8">
						<img
							src="/images/codecohesion/timeline-v2-gource.png"
							alt="CodeCohesion Screenshot"
							class="rounded-lg shadow-xl w-full"
						/>
					</div>
					<div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
						<div class="lg:col-span-2">
							<h2 class="text-3xl font-bold mb-4 text-vg-burgundy">CodeCohesion</h2>
							<p class="text-lg text-vg-gray-dark mb-6">
								3D visualization tool for analyzing code structure, cohesion patterns, and architectural evolution. Watch your codebase evolve commit-by-commit with interactive timeline playback.
							</p>
							<div class="flex flex-wrap gap-4 mb-8">
								<a href="https://thepaulrayner.com/codecohesion/" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-1 text-vg-red hover:text-vg-red-light font-semibold">
									View Demo
									<Icon name="arrow-right" size="sm" />
								</a>
								<a href="https://github.com/paulrayner/codecohesion" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-1 text-vg-gray hover:text-vg-gray-dark font-semibold">
									<Icon name="github" size="sm" />
									GitHub
								</a>
								<a href="/products/codecohesion" class="inline-flex items-center gap-1 text-vg-burgundy hover:text-vg-red font-semibold">
									Learn More
									<Icon name="arrow-right" size="sm" />
								</a>
							</div>
						</div>
						<div>
							<div class="bg-vg-gray-light p-6 rounded-lg">
								<h3 class="text-lg font-semibold mb-3 text-vg-burgundy">Key Features</h3>
								<ul class="space-y-2 text-sm text-vg-gray-dark">
									<li class="flex items-start gap-2">
										<span class="text-vg-red mt-1 flex-shrink-0">
											<Icon name="check" size="sm" />
										</span>
										<span>3D solar system visualization</span>
									</li>
									<li class="flex items-start gap-2">
										<span class="text-vg-red mt-1 flex-shrink-0">
											<Icon name="check" size="sm" />
										</span>
										<span>Timeline playback (Gource-style)</span>
									</li>
									<li class="flex items-start gap-2">
										<span class="text-vg-red mt-1 flex-shrink-0">
											<Icon name="check" size="sm" />
										</span>
										<span>Cohesion analysis for DDD</span>
									</li>
									<li class="flex items-start gap-2">
										<span class="text-vg-red mt-1 flex-shrink-0">
											<Icon name="check" size="sm" />
										</span>
										<span>Multiple color modes (file type, author, time)</span>
									</li>
									<li class="flex items-start gap-2">
										<span class="text-vg-red mt-1 flex-shrink-0">
											<Icon name="check" size="sm" />
										</span>
										<span>Interactive exploration</span>
									</li>
									<li class="flex items-start gap-2">
										<span class="text-vg-red mt-1 flex-shrink-0">
											<Icon name="check" size="sm" />
										</span>
										<span>Browser-based, TypeScript + Three.js</span>
									</li>
								</ul>
							</div>
						</div>
					</div>
				</div>
			</div>
		</Section>

		<!-- Why Open Source? -->
		<Section background="gray">
			<div class="max-w-4xl mx-auto text-center">
				<h2 class="text-3xl md:text-4xl font-bold mb-6 text-vg-burgundy">Why Open Source?</h2>
				<p class="text-xl text-vg-gray-dark mb-6">
					These tools were built to solve real problems we encountered while helping teams apply Domain-Driven Design and EventStorming.
				</p>
				<p class="text-xl text-vg-gray-dark mb-6">
					By making them open source, we hope to help the broader DDD community visualize, analyze, and improve their software architectures.
				</p>
				<p class="text-lg text-vg-red font-semibold">
					MIT Licensed - Free to use, modify, and distribute
				</p>
			</div>
		</Section>

		<!-- Get Involved -->
		<Section>
			<div class="max-w-3xl mx-auto text-center">
				<h2 class="text-3xl md:text-4xl font-bold mb-6 text-vg-burgundy">Get Involved</h2>
				<p class="text-lg text-vg-gray-dark mb-8">
					Found a bug? Have a feature request? Want to contribute? Visit the GitHub repositories to get involved.
				</p>
				<div class="flex flex-col sm:flex-row gap-4 justify-center">
					<a
						href="https://github.com/paulrayner/contextflow"
						target="_blank"
						rel="noopener noreferrer"
						class="inline-block px-6 py-3 bg-vg-red text-white font-semibold rounded-lg hover:bg-vg-red-light transition-colors duration-200"
					>
						ContextFlow on GitHub
					</a>
					<a
						href="https://github.com/paulrayner/codecohesion"
						target="_blank"
						rel="noopener noreferrer"
						class="inline-block px-6 py-3 bg-vg-red text-white font-semibold rounded-lg hover:bg-vg-red-light transition-colors duration-200"
					>
						CodeCohesion on GitHub
					</a>
				</div>
			</div>
		</Section>

		<Footer />
	</body>
</html>
