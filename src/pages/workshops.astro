---
import BaseHead from "../components/BaseHead.astro";
import Button from "../components/Button.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";
import Section from "../components/Section.astro";
import TestimonialCard from "../components/TestimonialCard.astro";
import WorkshopCard from "../components/WorkshopCard.astro";
import { SITE_TITLE } from "../consts";

const title = `Public Workshops | ${SITE_TITLE}`;
const description =
  "Join our live virtual EventStorming and Domain-Driven Design workshops. Hands-on training with expert facilitation, small cohorts, and practical exercises you can apply immediately.";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <body class="bg-white">
    <Header />

    <!-- Hero with Workshop Background -->
    <section class="relative w-full overflow-hidden" style="height: 360px;">
      <!-- Background Image -->
      <div class="absolute inset-0 w-full h-full">
        <img
          src="/images/eddd-2017-workshop-2.jpg"
          alt="Workshop participants"
          class="w-full h-full object-cover"
          style="filter: brightness(0.6); object-position: center 40%;"
        />
        <!-- Dark overlay for text readability -->
        <div class="absolute inset-0 bg-gradient-to-b from-black/40 via-black/30 to-black/50"></div>
      </div>

      <!-- Content Overlay -->
      <div class="relative z-10 flex items-center justify-center h-full">
        <div class="max-w-screen-xl mx-auto px-6 w-full">
          <div class="text-center max-w-4xl mx-auto">
            <h1 class="text-5xl md:text-7xl font-bold mb-6 text-white drop-shadow-lg">
              Public EventStorming & DDD Workshops
            </h1>
            <p class="text-2xl md:text-3xl mb-8 text-white/95 drop-shadow-md">
              Live, instructor-led training with hands-on practice. Learn through doing, not just watching.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Upcoming Workshops -->
    <Section>
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-vg-burgundy mb-4">
          Upcoming Workshops
        </h2>
        <p class="text-lg text-vg-gray-dark max-w-3xl mx-auto">
          Interactive virtual sessions where you'll practice EventStorming and
          Domain-Driven Design techniques with real scenarios
        </p>
      </div>
      <div
        class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-8 max-w-5xl mx-auto mb-12"
      >
        <WorkshopCard
          title="APAC EventStorming Facilitation Virtual Workshop"
          dates="December 2-5, 2025"
          format="Virtual"
          price="$495"
          duration="12 hours total (4 sessions × 3 hours each)"
          targetAudience="Product managers, developers, architects, and domain experts"
          description="Intensive workshop covering Big Picture EventStorming, Process Modeling, and Software Design. Scheduled for APAC timezone. Perfect for teams wanting to explore complex business domains collaboratively."
          learningOutcomes={[
            "Master Big Picture EventStorming for discovering domain knowledge and system boundaries",
            "Learn Process Modeling EventStorming for detailed workflow analysis and bottleneck identification",
            "Apply EventStorming techniques to software design and architecture decisions"
          ]}
          registrationUrl="https://ti.to/EDDD/eventstorming-facilitation-virtual-workshop-dec-2025"
        />
        <WorkshopCard
          title="EventStorming Facilitation Virtual Workshop"
          dates="April 14-17, 2026"
          format="Virtual"
          price="$495"
          duration="12 hours total (4 sessions × 3 hours each)"
          targetAudience="Product managers, developers, architects, and domain experts"
          description="Intensive workshop covering Big Picture EventStorming, Process Modeling, and Software Design. Perfect for teams wanting to explore complex business domains collaboratively."
          learningOutcomes={[
            "Master Big Picture EventStorming for discovering domain knowledge and system boundaries",
            "Learn Process Modeling EventStorming for detailed workflow analysis and bottleneck identification",
            "Apply EventStorming techniques to software design and architecture decisions"
          ]}
          registrationUrl="https://ti.to/EDDD/eventstorming-facilitation-virtual-workshop-apr-2026"
        />
      </div>

      <!-- Email Signup for Future Workshops -->
      <div
        class="text-center max-w-2xl mx-auto bg-vg-gray-light rounded-2xl p-8"
      >
        <h3 class="text-2xl font-bold text-vg-burgundy mb-4">Stay Informed</h3>
        <p class="text-vg-gray-dark mb-6">
          Get notified when new workshop dates are announced
        </p>
        <a
          href="mailto:info@virtualgenius.com?subject=Workshop Notifications"
          class="inline-block px-6 py-3 bg-vg-red text-white font-semibold rounded-lg hover:bg-vg-burgundy transition-colors duration-200"
        >
          Subscribe for Updates
        </a>
      </div>
    </Section>

    <!-- Why Attend -->
    <Section background="gray">
      <h2
        class="text-3xl md:text-4xl font-bold text-center mb-12 text-vg-burgundy"
      >
        Why Attend a Public Workshop?
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-5xl mx-auto">
        <div class="text-center">
          <div
            class="w-16 h-16 bg-vg-red rounded-full flex items-center justify-center mx-auto mb-6"
          >
            <svg
              class="w-8 h-8 text-white"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"
              ></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-vg-burgundy mb-4">
            Hands-On Practice
          </h3>
          <p class="text-vg-gray-dark">
            Work through real scenarios with expert guidance. Learn by doing,
            not just watching presentations.
          </p>
        </div>

        <div class="text-center">
          <div
            class="w-16 h-16 bg-vg-red rounded-full flex items-center justify-center mx-auto mb-6"
          >
            <svg
              class="w-8 h-8 text-white"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
              ></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-vg-burgundy mb-4">Small Cohorts</h3>
          <p class="text-vg-gray-dark">
            Limited class sizes ensure direct interaction with the instructor
            and personalized feedback.
          </p>
        </div>

        <div class="text-center">
          <div
            class="w-16 h-16 bg-vg-red rounded-full flex items-center justify-center mx-auto mb-6"
          >
            <svg
              class="w-8 h-8 text-white"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"
              ></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-vg-burgundy mb-4">
            Immediate Application
          </h3>
          <p class="text-vg-gray-dark">
            Take home practical techniques and materials you can apply to your
            projects right away.
          </p>
        </div>
      </div>
    </Section>

    <!-- Track Record -->
    <Section background="white">
      <div class="text-center mb-12">
        <p
          class="text-sm uppercase tracking-wider mb-4 text-vg-red font-semibold"
        >
          PROVEN RESULTS
        </p>
        <h2 class="text-3xl md:text-4xl font-bold text-vg-burgundy">
          Workshop Track Record
        </h2>
      </div>
      <div
        class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-4xl mx-auto mb-12"
      >
        <div class="text-center">
          <div class="text-5xl font-bold text-vg-red mb-2">580+</div>
          <p class="text-vg-gray-dark font-medium">Workshop Participants</p>
        </div>
        <div class="text-center">
          <div class="text-5xl font-bold text-vg-red mb-2">9.2/10</div>
          <p class="text-vg-gray-dark font-medium">Average Rating</p>
        </div>
        <div class="text-center">
          <div class="text-5xl font-bold text-vg-red mb-2">15+</div>
          <p class="text-vg-gray-dark font-medium">Years Teaching</p>
        </div>
      </div>

      <!-- Testimonials -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-6xl mx-auto">
        <TestimonialCard
          quote="Paul certainly knew his material. He broke down processes in such a way that both technical/non-technical employees were able to digest the same material and apply it to their domain ... The course was intended to enhance the symbiotic relationship between business and tech and that it did."
          role="Workshop Participant"
          industry="Financial Services"
          rating={10}
          workshop="Applied DDD"
        />
        <TestimonialCard
          quote="This has been a very engaging 3 days. I definitely like we had to work the muscles of what was trained on. I have good confidence that these principles can be used in my actual projects."
          role="Software Developer"
          industry="Financial Services"
          rating={9}
          workshop="Applied DDD"
        />
        <TestimonialCard
          quote="Common language used from inception to implementation, from business discussions through to code. Event storming and context mapping both powerful tools to ensure shared understanding and then to help prioritize efforts. Additional insight into Development work and how PO can help make this work easier and rally the team around shared understanding."
          role="Product Owner"
          industry="Financial Services"
          rating={10}
          workshop="Applied DDD London"
        />
      </div>
    </Section>

    <!-- FAQ -->
    <Section background="gray">
      <h2
        class="text-3xl md:text-4xl font-bold text-center mb-12 text-vg-burgundy"
      >
        Frequently Asked Questions
      </h2>
      <div class="max-w-3xl mx-auto space-y-8">
        <div>
          <h3 class="text-xl font-bold text-vg-burgundy mb-3">
            What time zone are the workshops in?
          </h3>
          <p class="text-vg-gray-dark">
            All times are listed in your local timezone when you register.
            Virtual workshops are typically scheduled to accommodate
            participants from multiple time zones, with sessions running during
            US business hours (Mountain Time).
          </p>
        </div>

        <div>
          <h3 class="text-xl font-bold text-vg-burgundy mb-3">
            Are recordings available?
          </h3>
          <p class="text-vg-gray-dark">
            Recordings are provided for registered participants who cannot
            attend a session live. However, we strongly encourage live
            attendance to get the most value from the interactive exercises and
            real-time feedback.
          </p>
        </div>

        <div>
          <h3 class="text-xl font-bold text-vg-burgundy mb-3">
            What are the prerequisites?
          </h3>
          <p class="text-vg-gray-dark">
            No prior EventStorming or DDD experience is required. The workshop
            is designed for developers, architects, product managers, and
            business analysts who want to learn collaborative modeling
            techniques. Basic software development knowledge is helpful but not
            mandatory.
          </p>
        </div>

        <div>
          <h3 class="text-xl font-bold text-vg-burgundy mb-3">
            Do you offer team discounts?
          </h3>
          <p class="text-vg-gray-dark">
            Yes! If you're bringing 3+ people from your organization, contact us
            at <a
              href="mailto:info@virtualgenius.com"
              class="text-vg-red hover:underline">info@virtualgenius.com</a
            > for team pricing. For groups of 10+, consider a <a
              href="/services/eventstorming"
              class="text-vg-red hover:underline">private workshop</a
            > customized to your specific domain.
          </p>
        </div>

        <div>
          <h3 class="text-xl font-bold text-vg-burgundy mb-3">
            What tools do I need?
          </h3>
          <p class="text-vg-gray-dark">
            For virtual workshops, you'll need a reliable internet connection,
            webcam, and microphone. We use Zoom for video conferencing and Miro
            for collaborative exercises. All necessary software is free to use.
          </p>
        </div>

        <div>
          <h3 class="text-xl font-bold text-vg-burgundy mb-3">
            Will I receive a certificate?
          </h3>
          <p class="text-vg-gray-dark">
            Yes, all participants who complete the workshop receive a
            certificate of completion and access to workshop materials including
            templates, guides, and reference resources.
          </p>
        </div>
      </div>
    </Section>

    <!-- Contact CTA -->
    <Section background="burgundy">
      <div class="text-center max-w-3xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">
          Questions About Workshops?
        </h2>
        <p class="text-xl mb-8 text-vg-gray-light">
          Have questions about the curriculum, format, or which workshop is
          right for you? Get in touch and we'll help you decide.
        </p>
        <Button href="mailto:info@virtualgenius.com" variant="outlined">
          Contact Us
        </Button>
      </div>
    </Section>

    <Footer />
  </body>
</html>
