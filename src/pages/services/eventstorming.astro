---
import BackToTop from '../../components/BackToTop.astro';
import BaseHead from '../../components/BaseHead.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
import Button from '../../components/Button.astro';
import Footer from '../../components/Footer.astro';
import Header from '../../components/Header.astro';
import Hero from '../../components/Hero.astro';
import Icon from '../../components/Icon.astro';
import Section from '../../components/Section.astro';
import TestimonialCard from '../../components/TestimonialCard.astro';

const title = 'EventStorming Workshops - Virtual Genius';
const description = '2-day facilitated EventStorming workshops for exploring complex business domains and designing better software solutions collaboratively.';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
	</head>
	<body class="bg-white">
		<Header />
		<Breadcrumb items={[
			{ label: 'Home', href: '/' },
			{ label: 'Services', href: '/services' },
			{ label: 'EventStorming Workshops' }
		]} />

		<!-- Hero with EventStorming Wall Background -->
		<section class="relative w-full overflow-hidden" style="height: 360px;">
			<!-- Background Image -->
			<div class="absolute inset-0 w-full h-full">
				<img
					src="/images/eventstorming-wall.png"
					alt="EventStorming wall with sticky notes"
					class="w-full h-full object-cover"
					style="filter: brightness(0.6); object-position: center 40%;"
				/>
				<!-- Dark overlay for text readability -->
				<div class="absolute inset-0 bg-gradient-to-b from-black/40 via-black/30 to-black/50"></div>
			</div>

			<!-- Content Overlay -->
			<div class="relative z-10 flex items-center justify-center h-full">
				<div class="max-w-screen-xl mx-auto px-6 w-full">
					<div class="text-center max-w-4xl mx-auto">
						<h1 class="text-5xl md:text-7xl font-bold mb-6 text-white drop-shadow-lg">
							EventStorming Workshops
						</h1>
						<p class="text-2xl md:text-3xl mb-8 text-white/95 drop-shadow-md">
							Facilitated workshops for exploring complex business domains and discovering better software solutions together—delivered in-person, virtual, or hybrid
						</p>
						<Button href="mailto:info@virtualgenius.com" variant="primary">
							Schedule a Workshop
						</Button>
					</div>
				</div>
			</div>
		</section>

		<!-- What is EventStorming? -->
		<Section>
			<div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center max-w-6xl mx-auto">
				<div>
					<h2 class="text-3xl md:text-4xl font-bold mb-8 text-vg-burgundy">What is EventStorming?</h2>
					<p class="text-lg mb-6 text-vg-gray-dark">
						EventStorming is a rapid, collaborative workshop format for exploring complex business domains. By bringing together business experts and technical team members, EventStorming reveals how your business actually works—not how you think it works.
					</p>
					<p class="text-lg mb-6 text-vg-gray-dark">
						Using colored sticky notes on a long wall, participants model business processes as sequences of domain events, uncovering insights, identifying pain points, and discovering opportunities for improvement.
					</p>
					<div class="bg-vg-amber/10 border-l-4 border-vg-amber p-6 rounded">
						<p class="text-lg text-vg-gray-dark italic">
							"The goal is not to create perfect documentation—it's to create shared understanding and identify what to build next."
						</p>
					</div>
				</div>
				<div>
					<video autoplay loop muted playsinline width="100%" class="rounded-lg shadow-xl">
						<source src="/videos/es-timelapse2-cropped.mp4" type="video/mp4">
						Your browser does not support the video tag.
					</video>
					<p class="text-sm text-vg-gray text-center mt-2 italic">
						In-person EventStorming workshop timelapse
					</p>
				</div>
			</div>
		</Section>

		<!-- Delivery Formats -->
		<Section background="gray">
			<h2 class="text-3xl md:text-4xl font-bold mb-8 text-center text-vg-burgundy">
				Delivery Formats
			</h2>
			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-5xl mx-auto">
				<!-- In-Person Card with Image -->
				<div class="bg-white rounded-lg shadow-lg border-t-4 border-vg-red overflow-hidden">
					<div class="relative h-48 overflow-hidden">
						<img
							src="/images/bti360-eventstorming-collaboration-closeup.jpg"
							alt="In-person EventStorming workshop"
							class="w-full h-full object-cover"
						/>
					</div>
					<div class="p-8">
						<h3 class="text-2xl font-semibold mb-4 text-vg-burgundy">In-Person</h3>
						<p class="text-vg-gray-dark mb-4">
							2-day intensive format with physical wall space and sticky notes for high-energy collaborative exploration
						</p>
						<p class="text-sm text-vg-gray">
							<strong>Best for:</strong> Co-located teams, greenfield exploration, team building
						</p>
					</div>
				</div>

				<!-- Virtual Card with Image -->
				<div class="bg-white rounded-lg shadow-lg border-t-4 border-vg-red overflow-hidden">
					<div class="relative h-48 overflow-hidden">
						<img
							src="/images/virtual-workshop-zoom.webp"
							alt="Virtual EventStorming workshop on Zoom"
							class="w-full h-full object-cover"
							loading="lazy"
						/>
					</div>
					<div class="p-8">
						<h3 class="text-2xl font-semibold mb-4 text-vg-burgundy">Virtual</h3>
						<p class="text-vg-gray-dark mb-4">
							4-6 sessions of 2-3 hours each using Miro collaborative whiteboard and Zoom for distributed teams
						</p>
						<p class="text-sm text-vg-gray">
							<strong>Best for:</strong> Remote teams, complex domains, flexible scheduling
						</p>
					</div>
				</div>

				<!-- Hybrid Card with Image -->
				<div class="bg-white rounded-lg shadow-lg border-t-4 border-vg-red overflow-hidden">
					<div class="relative h-48 overflow-hidden">
						<img
							src="/images/nussbaum-eventstorming.webp"
							alt="Hybrid EventStorming workshop"
							class="w-full h-full object-cover"
						/>
					</div>
					<div class="p-8">
						<h3 class="text-2xl font-semibold mb-4 text-vg-burgundy">Hybrid</h3>
						<p class="text-vg-gray-dark mb-4">
							Virtual facilitation with team co-located or distributed, using Miro to include all participants
						</p>
						<p class="text-sm text-vg-gray">
							<strong>Best for:</strong> Teams with some remote members
						</p>
					</div>
				</div>
			</div>
		</Section>

		<!-- Workshop Format -->
		<Section>
			<h2 class="text-3xl md:text-4xl font-bold mb-8 text-center text-vg-burgundy">
				Workshop Format Examples
			</h2>
			<div class="grid grid-cols-1 md:grid-cols-2 gap-12 max-w-5xl mx-auto">
				<!-- In-Person: 2-Day -->
				<div class="bg-vg-gray-light p-8 rounded-lg">
					<h3 class="text-2xl font-bold text-center mb-6 text-vg-burgundy">In-Person: 2-Day Intensive</h3>
					<div class="space-y-6">
						<div>
							<div class="flex items-center mb-3">
								<div class="bg-vg-red text-white text-xl font-bold rounded-full w-10 h-10 flex items-center justify-center mr-3">
									1
								</div>
								<h4 class="text-xl font-semibold text-vg-burgundy">Day 1: Exploration</h4>
							</div>
							<ul class="space-y-2 text-vg-gray-dark ml-13">
								<li class="flex items-start">
									<span class="text-vg-red mr-2">▸</span>
									<span>Big Picture EventStorming - Map end-to-end process</span>
								</li>
								<li class="flex items-start">
									<span class="text-vg-red mr-2">▸</span>
									<span>Identify Domain Events</span>
								</li>
								<li class="flex items-start">
									<span class="text-vg-red mr-2">▸</span>
									<span>Surface Hot Spots and bottlenecks</span>
								</li>
								<li class="flex items-start">
									<span class="text-vg-red mr-2">▸</span>
									<span>Discover improvement opportunities</span>
								</li>
							</ul>
						</div>
						<div>
							<div class="flex items-center mb-3">
								<div class="bg-vg-red text-white text-xl font-bold rounded-full w-10 h-10 flex items-center justify-center mr-3">
									2
								</div>
								<h4 class="text-xl font-semibold text-vg-burgundy">Day 2: Solution Design</h4>
							</div>
							<ul class="space-y-2 text-vg-gray-dark ml-13">
								<li class="flex items-start">
									<span class="text-vg-red mr-2">▸</span>
									<span>Process-Level Modeling</span>
								</li>
								<li class="flex items-start">
									<span class="text-vg-red mr-2">▸</span>
									<span>Identify Bounded Contexts</span>
								</li>
								<li class="flex items-start">
									<span class="text-vg-red mr-2">▸</span>
									<span>Design Solutions</span>
								</li>
								<li class="flex items-start">
									<span class="text-vg-red mr-2">▸</span>
									<span>Define Next Steps</span>
								</li>
							</ul>
						</div>
					</div>
				</div>

				<!-- Virtual: 4-6 Sessions -->
				<div class="bg-vg-gray-light p-8 rounded-lg">
					<h3 class="text-2xl font-bold text-center mb-6 text-vg-burgundy">Virtual: 4-6 Sessions</h3>
					<div class="space-y-4">
						<div>
							<div class="flex items-center mb-2">
								<div class="bg-vg-red text-white font-bold rounded-full w-8 h-8 flex items-center justify-center mr-2 text-sm">
									1-2
								</div>
								<h4 class="text-lg font-semibold text-vg-burgundy">Big Picture Exploration</h4>
							</div>
							<p class="text-vg-gray-dark ml-10 text-sm">Map domain events, identify hot spots, surface assumptions</p>
						</div>
						<div>
							<div class="flex items-center mb-2">
								<div class="bg-vg-red text-white font-bold rounded-full w-8 h-8 flex items-center justify-center mr-2 text-sm">
									3-4
								</div>
								<h4 class="text-lg font-semibold text-vg-burgundy">Process Modeling</h4>
							</div>
							<p class="text-vg-gray-dark ml-10 text-sm">Zoom into specific areas, add commands and actors, identify bounded contexts</p>
						</div>
						<div>
							<div class="flex items-center mb-2">
								<div class="bg-vg-red text-white font-bold rounded-full w-8 h-8 flex items-center justify-center mr-2 text-sm">
									5-6
								</div>
								<h4 class="text-lg font-semibold text-vg-burgundy">Solution Design</h4>
							</div>
							<p class="text-vg-gray-dark ml-10 text-sm">Design improvements, define APIs, prioritize next steps</p>
						</div>
						<div class="mt-4 pt-4 border-t border-vg-gray">
							<p class="text-sm text-vg-gray-dark">
								<strong>Each session:</strong> 2-3 hours with breaks<br/>
								<strong>Tools:</strong> Miro + Zoom with breakout rooms<br/>
								<strong>Scheduling:</strong> Spread over 1-2 weeks
							</p>
						</div>
					</div>
				</div>
			</div>
		</Section>

		<!-- Typical Outcomes -->
		<Section>
			<h2 class="text-3xl md:text-4xl font-bold mb-8 text-center text-vg-burgundy">
				What You'll Walk Away With
			</h2>
			<div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-5xl mx-auto">
				<div class="bg-vg-gray-light p-6 rounded-lg">
					<h3 class="text-xl font-semibold mb-3 text-vg-red">Shared Understanding</h3>
					<p class="text-vg-gray-dark">
						Business and technical teams aligned on how the system actually works
					</p>
				</div>
				<div class="bg-vg-gray-light p-6 rounded-lg">
					<h3 class="text-xl font-semibold mb-3 text-vg-red">Identified Pain Points</h3>
					<p class="text-vg-gray-dark">
						Clear picture of bottlenecks, inefficiencies, and areas needing improvement
					</p>
				</div>
				<div class="bg-vg-gray-light p-6 rounded-lg">
					<h3 class="text-xl font-semibold mb-3 text-vg-red">Bounded Contexts</h3>
					<p class="text-vg-gray-dark">
						Strategic view of key system components and their value stream relationships
					</p>
				</div>
				<div class="bg-vg-gray-light p-6 rounded-lg">
					<h3 class="text-xl font-semibold mb-3 text-vg-red">Actionable Roadmap</h3>
					<p class="text-vg-gray-dark">
						Prioritized list of next steps for addressing improvement opportunities
					</p>
				</div>
				<div class="bg-vg-gray-light p-6 rounded-lg">
					<h3 class="text-xl font-semibold mb-3 text-vg-red">Documented Model</h3>
					<p class="text-vg-gray-dark">
						Photos, time-lapse videos, and digital artifacts from the session
					</p>
				</div>
				<div class="bg-vg-gray-light p-6 rounded-lg">
					<h3 class="text-xl font-semibold mb-3 text-vg-red">Team Alignment</h3>
					<p class="text-vg-gray-dark">
						Cross-functional collaboration and shared vocabulary
					</p>
				</div>
			</div>
		</Section>

		<!-- Case Study -->
		<Section background="gray">
			<div class="max-w-6xl mx-auto">
				<div class="text-center mb-12">
					<p class="text-sm uppercase tracking-wider mb-4 text-vg-red font-semibold">SUCCESS STORY</p>
					<h2 class="text-3xl md:text-4xl font-bold text-vg-burgundy">Real Results from EventStorming</h2>
				</div>

				<div class="bg-white rounded-2xl shadow-xl overflow-hidden">
					<div class="relative overflow-hidden bg-vg-gray-dark">
						<img
							src="/images/nussbaum-eventstorming.webp"
							alt="Nussbaum EventStorming workshop - digital board showing process flow with sticky notes and participant roles"
							class="w-full object-contain"
						/>
						<div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-vg-burgundy-dark/95 to-transparent p-6">
							<div class="text-white text-center">
								<p class="text-3xl font-bold mb-1">11 Process Improvements</p>
								<p class="text-sm opacity-90">Identified in 4 Sessions × 2 Hours</p>
							</div>
						</div>
					</div>

					<div class="p-8 lg:p-12">
						<div class="max-w-4xl mx-auto">
							<div class="mb-8">
								<h3 class="text-2xl font-bold text-vg-burgundy mb-3">
									Nussbaum Transportation
								</h3>
								<p class="text-vg-gray-dark mb-4 italic text-lg">
									"The problem we are tackling is that as Nussbaum has grown, the knowledge of how and why Nussbaum works has been shared in a way that now there are few people who know 'everything'."
								</p>
								<p class="text-sm text-vg-gray">— Ben Virkler, IT Team</p>
								<p class="text-sm text-vg-gray mt-2">
									<strong>Format:</strong> Hybrid delivery with virtual facilitation, 12 participants mostly in-person with some remote
								</p>
							</div>

							<div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
								<div>
									<h4 class="text-lg font-semibold text-vg-burgundy mb-3">The Challenge</h4>
									<p class="text-vg-gray-dark">
										A growing transportation and logistics company needed to tackle knowledge silos and process inefficiencies as they scaled.
									</p>
								</div>

								<div>
									<h4 class="text-lg font-semibold text-vg-burgundy mb-3">The Outcome</h4>
									<p class="text-vg-gray-dark font-semibold">
										11 Process Improvement Opportunities Identified
									</p>
								</div>
							</div>

							<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
								<div>
									<p class="font-semibold text-vg-red mb-2">Streamline Communication:</p>
									<ul class="space-y-1 text-sm text-vg-gray-dark">
										<li class="flex items-start gap-2">
											<span class="text-vg-red mt-0.5 flex-shrink-0">
												<Icon name="check" size="sm" />
											</span>
											<span>Address damage/injury communication gaps</span>
										</li>
										<li class="flex items-start gap-2">
											<span class="text-vg-red mt-0.5 flex-shrink-0">
												<Icon name="check" size="sm" />
											</span>
											<span>Simplify trip information for drivers</span>
										</li>
										<li class="flex items-start gap-2">
											<span class="text-vg-red mt-0.5 flex-shrink-0">
												<Icon name="check" size="sm" />
											</span>
											<span>Improve driver pay information system</span>
										</li>
										<li class="flex items-start gap-2">
											<span class="text-vg-red mt-0.5 flex-shrink-0">
												<Icon name="check" size="sm" />
											</span>
											<span>Enhance visibility into shop equipment work</span>
										</li>
										<li class="flex items-start gap-2">
											<span class="text-vg-red mt-0.5 flex-shrink-0">
												<Icon name="check" size="sm" />
											</span>
											<span>Reduce email reliance</span>
										</li>
									</ul>
								</div>

								<div>
									<p class="font-semibold text-vg-red mb-2">Gain Efficiency:</p>
									<ul class="space-y-1 text-sm text-vg-gray-dark">
										<li class="flex items-start gap-2">
											<span class="text-vg-red mt-0.5 flex-shrink-0">
												<Icon name="check" size="sm" />
											</span>
											<span>Eliminate duplicate permit identification work</span>
										</li>
										<li class="flex items-start gap-2">
											<span class="text-vg-red mt-0.5 flex-shrink-0">
												<Icon name="check" size="sm" />
											</span>
											<span>Automate manual data collection for bidding</span>
										</li>
									</ul>
								</div>

								<div>
									<p class="font-semibold text-vg-red mb-2">Increase Profitability:</p>
									<ul class="space-y-1 text-sm text-vg-gray-dark">
										<li class="flex items-start gap-2">
											<span class="text-vg-red mt-0.5 flex-shrink-0">
												<Icon name="check" size="sm" />
											</span>
											<span>Streamline 3PL brokered freight pricing</span>
										</li>
										<li class="flex items-start gap-2">
											<span class="text-vg-red mt-0.5 flex-shrink-0">
												<Icon name="check" size="sm" />
											</span>
											<span>Improve sales visibility into operational costs</span>
										</li>
										<li class="flex items-start gap-2">
											<span class="text-vg-red mt-0.5 flex-shrink-0">
												<Icon name="check" size="sm" />
											</span>
											<span>Capture missed accessorial charges</span>
										</li>
										<li class="flex items-start gap-2">
											<span class="text-vg-red mt-0.5 flex-shrink-0">
												<Icon name="check" size="sm" />
											</span>
											<span>Convert 3PL brokered freight to customer spot freight</span>
										</li>
									</ul>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</Section>

		<!-- Who Should Attend? -->
		<Section>
			<h2 class="text-3xl md:text-4xl font-bold mb-8 text-center text-vg-burgundy">
				Who Should Attend?
			</h2>
			<div class="max-w-4xl mx-auto">
				<p class="text-lg mb-6 text-vg-gray-dark text-center">
					EventStorming works best with a diverse group of <strong>12-20 participants</strong> including:
				</p>
				<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
					<div>
						<h3 class="text-xl font-semibold mb-4 text-vg-red">Business Experts</h3>
						<ul class="space-y-2 text-vg-gray-dark">
							<li class="flex items-start gap-2">
								<span class="text-vg-red mt-1 flex-shrink-0">
									<Icon name="check" size="sm" />
								</span>
								<span>Product managers</span>
							</li>
							<li class="flex items-start gap-2">
								<span class="text-vg-red mt-1 flex-shrink-0">
									<Icon name="check" size="sm" />
								</span>
								<span>Domain experts</span>
							</li>
							<li class="flex items-start gap-2">
								<span class="text-vg-red mt-1 flex-shrink-0">
									<Icon name="check" size="sm" />
								</span>
								<span>Business analysts</span>
							</li>
							<li class="flex items-start gap-2">
								<span class="text-vg-red mt-1 flex-shrink-0">
									<Icon name="check" size="sm" />
								</span>
								<span>Operations staff</span>
							</li>
							<li class="flex items-start gap-2">
								<span class="text-vg-red mt-1 flex-shrink-0">
									<Icon name="check" size="sm" />
								</span>
								<span>Customer support</span>
							</li>
						</ul>
					</div>
					<div>
						<h3 class="text-xl font-semibold mb-4 text-vg-red">Technical Team</h3>
						<ul class="space-y-2 text-vg-gray-dark">
							<li class="flex items-start gap-2">
								<span class="text-vg-red mt-1 flex-shrink-0">
									<Icon name="check" size="sm" />
								</span>
								<span>Software developers</span>
							</li>
							<li class="flex items-start gap-2">
								<span class="text-vg-red mt-1 flex-shrink-0">
									<Icon name="check" size="sm" />
								</span>
								<span>Architects</span>
							</li>
							<li class="flex items-start gap-2">
								<span class="text-vg-red mt-1 flex-shrink-0">
									<Icon name="check" size="sm" />
								</span>
								<span>Technical leads</span>
							</li>
							<li class="flex items-start gap-2">
								<span class="text-vg-red mt-1 flex-shrink-0">
									<Icon name="check" size="sm" />
								</span>
								<span>DevOps engineers</span>
							</li>
							<li class="flex items-start gap-2">
								<span class="text-vg-red mt-1 flex-shrink-0">
									<Icon name="check" size="sm" />
								</span>
								<span>QA/testers</span>
							</li>
						</ul>
					</div>
				</div>
			</div>
		</Section>

		<!-- Requirements -->
		<Section>
			<h2 class="text-3xl md:text-4xl font-bold mb-8 text-center text-vg-burgundy">
