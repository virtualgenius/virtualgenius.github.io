---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import Section from '../components/Section.astro';
import VideoCard from '../components/VideoCard.astro';
import { SITE_TITLE } from '../consts';

const title = `Speaking & Presentations | ${SITE_TITLE}`;
const description = 'Conference talks, workshops, and interviews on EventStorming, Domain-Driven Design, and software architecture by Paul Rayner.';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
	</head>
	<body class="bg-white">
		<Header />

		<!-- Hero with Speaking Background -->
		<section class="relative w-full overflow-hidden" style="height: 360px;">
			<!-- Background Image -->
			<div class="absolute inset-0 w-full h-full">
				<img
					src="/images/dddeu2020-4.jpg"
					alt="Paul Rayner presenting"
					class="w-full h-full object-cover"
					style="filter: brightness(0.6); object-position: center 40%;"
				/>
				<!-- Dark overlay for text readability -->
				<div class="absolute inset-0 bg-gradient-to-b from-black/40 via-black/30 to-black/50"></div>
			</div>

			<!-- Content Overlay -->
			<div class="relative z-10 flex items-center justify-center h-full">
				<div class="max-w-screen-xl mx-auto px-6 w-full">
					<div class="text-center max-w-4xl mx-auto">
						<h1 class="text-5xl md:text-7xl font-bold mb-6 text-white drop-shadow-lg">
							Speaking & Presentations
						</h1>
						<p class="text-2xl md:text-3xl mb-8 text-white/95 drop-shadow-md">
							Conference talks, hands-on workshops, and interviews on EventStorming, Domain-Driven Design, and collaborative software design
						</p>
					</div>
				</div>
			</div>
		</section>

		<!-- Conference Talks -->
		<Section>
			<h2 class="text-3xl md:text-4xl font-bold mb-12 text-vg-burgundy">Conference Talks</h2>
			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
				<VideoCard
					title="Baking Domain Concepts Into Code"
					event="Kandddinsky Conference"
					year={2024}
					videoUrl="https://www.youtube.com/watch?v=fO6rCj1lQlw"
					type="talk"
				/>
				<VideoCard
					title="Baking Domain Concepts Into Code"
					event="DDD Europe"
					year={2023}
					videoUrl="https://www.youtube.com/watch?v=o_vAjX2vHu8"
					type="talk"
				/>
				<VideoCard
					title="DDD by Example"
					event="DDD Europe Foundations Day"
					year={2020}
					videoUrl="https://www.youtube.com/watch?v=p1Nl2k9ZZf0"
					type="talk"
				/>
				<VideoCard
					title="Modeling Team Flow"
					event="Explore DDD"
					year={2018}
					videoUrl="https://www.youtube.com/watch?v=q80FiugsO1Q"
					type="talk"
				/>
				<VideoCard
					title="Refactoring to a Deeper Model"
					event="Explore DDD"
					year={2017}
					videoUrl="https://www.youtube.com/watch?v=vO86vdkv0wM"
					type="talk"
				/>
				<VideoCard
					title="Refactoring to Deeper Insight: Lessons Learned Applying DDD to Large Scale"
					event="DDD Europe"
					year={2017}
					videoUrl="https://www.youtube.com/watch?v=10ixgC8wBLI"
					type="talk"
				/>
				<VideoCard
					title="EventStorming: Collaborative Learning for Complex Domains"
					event="SATURN Conference"
					year={2017}
					videoUrl="https://www.youtube.com/watch?v=vf6x0i2d9VE"
					type="talk"
				/>
				<VideoCard
					title="EventStorming - Collaborative Learning for Complex Domains"
					event="YOW! Conference"
					year={2016}
					videoUrl="https://www.youtube.com/watch?v=8lw3GNqmdmI"
					type="talk"
				/>
				<VideoCard
					title="EventStorming"
					event="YOW! Perth"
					year={2016}
					videoUrl="https://www.youtube.com/watch?v=nVEHGhqAvJo"
					type="talk"
				/>
				<VideoCard
					title="How Agile Can Cripple Effective Design Work (and what to do about it)"
					event="DDD Europe"
					year={2016}
					videoUrl="https://www.youtube.com/watch?v=Bl30X0MvT0I"
					type="talk"
				/>
			</div>
		</Section>

		<!-- Keynotes -->
		<Section background="gray">
			<h2 class="text-3xl md:text-4xl font-bold mb-12 text-vg-burgundy">Keynotes</h2>
			<div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-5xl mx-auto">
				<VideoCard
					title="Fighting the Invisible Enemy"
					event="NewCrafts Conference"
					year={2018}
					videoUrl="https://vimeo.com/275328050"
					type="keynote"
					description="Keynote on optimizing for team productivity and overcoming invisible obstacles in software development"
				/>
			</div>
		</Section>

		<!-- Hands-On Workshops -->
		<Section>
			<h2 class="text-3xl md:text-4xl font-bold mb-12 text-vg-burgundy">Hands-On Workshops</h2>
			<p class="text-lg text-vg-gray-dark mb-8 max-w-3xl">
				Interactive workshop sessions at conferences where participants practice EventStorming, DDD, and collaborative modeling techniques. These sessions focus on hands-on learning rather than presentations.
			</p>
			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
				<VideoCard
					title="Baking Design Concepts Into Code"
					event="ADAConf"
					year={2025}
					type="workshop"
					description="Hands-on workshop on translating domain models into well-structured code"
				/>
				<VideoCard
					title="Baking Design Concepts Into Code"
					event="DDD Europe"
					year={2025}
					type="workshop"
					description="Interactive session on implementing DDD tactical patterns in real codebases"
				/>
				<VideoCard
					title="Exploring Connascence"
					event="DDD Europe"
					year={2020}
					type="workshop"
					description="Workshop exploring connascence as a vocabulary for discussing coupling in software design"
				/>
			</div>
		</Section>

		<!-- Interviews & Podcasts -->
		<Section>
			<h2 class="text-3xl md:text-4xl font-bold mb-12 text-vg-burgundy">Interviews & Podcasts</h2>
			<div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-5xl mx-auto">
				<VideoCard
					title="Vaughn Vernon and Paul Rayner: Journey to Explore DDD: Denver, USA and Beyond"
					event=""
					year={2024}
					videoUrl="https://www.youtube.com/watch?v=FnxLbAHwRZY"
					type="interview"
				/>
				<VideoCard
					title="Essence of Domain-Driven Design (DDD)"
					event="CodeOpinion with Derek Comartin"
					year={2023}
					videoUrl="https://www.youtube.com/watch?v=Y0txTmT3k7M"
					type="interview"
				/>
				<VideoCard
					title="Alberto Brandolini and Paul Rayner: Facing new challenges"
					event="Avanscoperta Remote Meetup"
					year={2020}
					videoUrl="https://www.youtube.com/watch?v=qOtRaXm9hfE"
					type="interview"
				/>
				<VideoCard
					title="Virtual DDD (vDDD)"
					event="Virtual DDD Meetup"
					year={2020}
					videoUrl="https://www.youtube.com/watch?v=jFEC7Pb1FtM"
					type="interview"
					description="Rebecca Wirfs-Brock, Paul Rayner, and Alberto Brandolini discuss types of EventStorming and heuristics for facilitation"
				/>
				<div class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300 p-6">
					<div class="flex items-center gap-2 mb-3">
						<span class="bg-vg-gray-dark text-white text-xs font-semibold px-3 py-1 rounded-full">
							Podcast
						</span>
					</div>
					<h3 class="text-xl font-bold text-vg-burgundy mb-2">
						The Agile Revolution - Episode 127: Storming DD's with Paul Rayner
					</h3>
					<p class="text-vg-red font-semibold mb-3">
						The Agile Revolution Podcast
					</p>
					<p class="text-vg-gray-dark text-sm leading-relaxed mb-4">
						Craig chats with Paul Rayner, a BDD and DDD expert who helps people bridge the gap of collaborative design between developers and business representatives, at YOW! West in Perth
					</p>
					<div class="mt-4 pt-4 border-t border-vg-gray-light">
						<a
							href="https://theagilerevolution.com/2017/04/28/episode-127-storming-dds-with-paul-rayner/"
							target="_blank"
							rel="noopener noreferrer"
							class="text-vg-red hover:text-vg-red-light font-semibold text-sm inline-flex items-center gap-2"
						>
							Listen to Episode
							<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
							</svg>
						</a>
					</div>
				</div>
				<div class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300 p-6">
					<div class="flex items-center gap-2 mb-3">
						<span class="bg-vg-gray-dark text-white text-xs font-semibold px-3 py-1 rounded-full">
							Podcast
						</span>
					</div>
					<h3 class="text-xl font-bold text-vg-burgundy mb-2">
						Developer on Fire
					</h3>
					<p class="text-vg-red font-semibold mb-3">
						Developer on Fire Podcast
					</p>
					<p class="text-vg-gray-dark text-sm leading-relaxed mb-4">
						Paul Rayner talks with Dave Rael about refactoring, learning a domain, Domain-Driven Design, and his Explore DDD Conference
					</p>
					<div class="mt-4 pt-4 border-t border-vg-gray-light">
						<a
							href="https://developeronfire.com/podcast/episode-254-paul-rayner-explore-ddd"
							target="_blank"
							rel="noopener noreferrer"
							class="text-vg-red hover:text-vg-red-light font-semibold text-sm inline-flex items-center gap-2"
						>
							Listen to Episode
							<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
							</svg>
						</a>
					</div>
				</div>
				<div class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300 p-6">
					<div class="flex items-center gap-2 mb-3">
						<span class="bg-vg-gray-dark text-white text-xs font-semibold px-3 py-1 rounded-full">
							Podcast
						</span>
					</div>
					<h3 class="text-xl font-bold text-vg-burgundy mb-2">
						BDD with Cucumber - Paul Rayner and Richard Lawrence
					</h3>
					<p class="text-vg-red font-semibold mb-3">
						Cucumber Podcast
					</p>
					<p class="text-vg-gray-dark text-sm leading-relaxed mb-4">
						Matt Wynne and Seb Rose sat down with Richard Lawrence and Paul Rayner to talk about their new book "Behavior-Driven Development with Cucumber"
					</p>
					<div class="mt-4 pt-4 border-t border-vg-gray-light">
						<a
							href="https://soundcloud.com/cucumber-podcast/bdd-with-cucumber-paul-rayner-and-richard-lawrence"
							target="_blank"
							rel="noopener noreferrer"
							class="text-vg-red hover:text-vg-red-light font-semibold text-sm inline-flex items-center gap-2"
						>
							Listen on SoundCloud
							<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
							</svg>
						</a>
					</div>
				</div>
			</div>
		</Section>

		<!-- Speaking Opportunities CTA -->
		<Section background="burgundy">
			<div class="text-center max-w-3xl mx-auto">
				<h2 class="text-3xl md:text-4xl font-bold mb-6">Looking for a Speaker?</h2>
				<p class="text-xl mb-8 text-vg-gray-light">
					Paul is available for conference talks, keynotes, and workshop facilitation on EventStorming, Domain-Driven Design, and collaborative software design.
				</p>
				<a
					href="mailto:info@virtualgenius.com"
					class="inline-block px-8 py-4 bg-white text-vg-burgundy font-semibold rounded-lg hover:bg-vg-gray-light transition-colors duration-200"
				>
					Request Speaker Info
				</a>
			</div>
		</Section>

		<Footer />
	</body>
</html>
