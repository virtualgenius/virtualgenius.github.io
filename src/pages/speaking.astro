---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import Section from '../components/Section.astro';
import VideoCard from '../components/VideoCard.astro';
import { SITE_TITLE } from '../consts';

const title = `Speaking & Presentations | ${SITE_TITLE}`;
const description = 'Conference talks, workshops, and interviews on EventStorming, Domain-Driven Design, and software architecture by Paul Rayner.';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
	</head>
	<body class="bg-white">
		<Header />

		<!-- Hero -->
		<Hero>
			<div class="max-w-4xl mx-auto text-center">
				<p class="text-sm uppercase tracking-wider mb-4 text-vg-red font-semibold">THOUGHT LEADERSHIP</p>
				<h1 class="text-4xl md:text-6xl font-bold mb-8 text-vg-burgundy tracking-tight">
					Speaking & Presentations
				</h1>
				<p class="text-xl md:text-2xl text-vg-gray-dark">
					Conference talks, hands-on workshops, and interviews on EventStorming, Domain-Driven Design, and collaborative software design
				</p>
			</div>
		</Hero>

		<!-- Conference Talks -->
		<Section>
			<h2 class="text-3xl md:text-4xl font-bold mb-12 text-vg-burgundy">Conference Talks</h2>
			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
				<VideoCard
					title="Kandddinsky"
					event="Kandddinsky Conference"
					year={2024}
					videoUrl="https://www.youtube.com/watch?v=A4h3Qkpm7mY"
					type="talk"
				/>
				<VideoCard
					title="The Gordian Knot of Emergent Design"
					event="DDD Europe"
					year={2023}
					videoUrl="https://www.youtube.com/watch?v=nWyQa84NHuE"
					type="talk"
				/>
				<VideoCard
					title="DDD by Example"
					event="DDD Europe Foundations Day"
					year={2020}
					videoUrl="https://www.youtube.com/watch?v=p1Nl2k9ZZf0"
					type="talk"
					description="Practical examples of applying Domain-Driven Design patterns to real-world problems"
				/>
				<VideoCard
					title="Emergent Boundaries"
					event="Explore DDD"
					year={2018}
					videoUrl="https://www.youtube.com/watch?v=hUXdh6xk2dA"
					type="talk"
				/>
				<VideoCard
					title="The Precision Blade"
					event="Explore DDD"
					year={2017}
					videoUrl="https://www.youtube.com/watch?v=lY54nmmwIHQ"
					type="talk"
				/>
				<VideoCard
					title="Mob Programming, Lean & DDD: Designing Quality Right From the Start"
					event="DDD Europe"
					year={2017}
					videoUrl="https://www.youtube.com/watch?v=Q_bJVokWKSE"
					type="talk"
				/>
				<VideoCard
					title="Introducing EventStorming"
					event="YOW! Conference"
					year={2016}
					videoUrl="https://www.youtube.com/watch?v=C7FZeVNOwAg"
					type="talk"
				/>
				<VideoCard
					title="The Anatomy of Domain-Driven Design"
					event="DDD Europe"
					year={2016}
					videoUrl="https://www.youtube.com/watch?v=k3Mm6Fa14jc"
					type="talk"
				/>
			</div>
		</Section>

		<!-- Keynotes -->
		<Section background="gray">
			<h2 class="text-3xl md:text-4xl font-bold mb-12 text-vg-burgundy">Keynotes</h2>
			<div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-5xl mx-auto">
				<VideoCard
					title="Fighting the Invisible Enemy"
					event="NewCrafts Conference"
					year={2018}
					videoUrl="https://vimeo.com/275328050"
					type="keynote"
					description="Keynote on optimizing for team productivity and overcoming invisible obstacles in software development"
				/>
			</div>
		</Section>

		<!-- Hands-On Workshops -->
		<Section>
			<h2 class="text-3xl md:text-4xl font-bold mb-12 text-vg-burgundy">Hands-On Workshops</h2>
			<p class="text-lg text-vg-gray-dark mb-8 max-w-3xl">
				Interactive workshop sessions at conferences where participants practice EventStorming, DDD, and collaborative modeling techniques. These sessions focus on hands-on learning rather than presentations.
			</p>
			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
				<VideoCard
					title="Baking Design Concepts Into Code"
					event="ADAConf"
					year={2025}
					type="workshop"
					description="Hands-on workshop on translating domain models into well-structured code"
				/>
				<VideoCard
					title="Baking Design Concepts Into Code"
					event="DDD Europe"
					year={2025}
					type="workshop"
					description="Interactive session on implementing DDD tactical patterns in real codebases"
				/>
				<VideoCard
					title="Exploring Connascence"
					event="DDD Europe"
					year={2020}
					type="workshop"
					description="Workshop exploring connascence as a vocabulary for discussing coupling in software design"
				/>
			</div>
		</Section>

		<!-- Interviews & Podcasts -->
		<Section background="gray">
			<h2 class="text-3xl md:text-4xl font-bold mb-12 text-vg-burgundy">Interviews & Podcasts</h2>
			<div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-5xl mx-auto">
				<VideoCard
					title="Interview with Paul Rayner"
					event="DDD Europe"
					year={2023}
					videoUrl="https://www.youtube.com/watch?v=rBzYr8f2ovY"
					type="interview"
					description="Discussion on EventStorming, DDD practices, and community building"
				/>
				<VideoCard
					title="Interview with Paul Rayner"
					event="DDD Europe"
					year={2020}
					videoUrl="https://www.youtube.com/watch?v=mhWyDDJGu3g"
					type="interview"
					description="Insights on domain modeling and strategic design"
				/>
				<VideoCard
					title="Explore DDD with Paul Rayner and Eric Evans"
					event="Software Engineering Radio"
					year={2019}
					videoUrl="https://www.youtube.com/watch?v=Xf_aLAK1RfE"
					type="interview"
					description="In-depth discussion with Eric Evans on the Explore DDD conference and the state of DDD"
				/>
			</div>
		</Section>

		<!-- Speaking Opportunities CTA -->
		<Section background="burgundy">
			<div class="text-center max-w-3xl mx-auto">
				<h2 class="text-3xl md:text-4xl font-bold mb-6">Looking for a Speaker?</h2>
				<p class="text-xl mb-8 text-vg-gray-light">
					Paul is available for conference talks, keynotes, and workshop facilitation on EventStorming, Domain-Driven Design, and collaborative software design.
				</p>
				<div class="mb-6">
					<a href="mailto:info@virtualgenius.com" class="text-xl hover:text-vg-red-light">
						info@virtualgenius.com
					</a>
				</div>
				<a
					href="mailto:info@virtualgenius.com"
					class="inline-block px-8 py-4 bg-white text-vg-burgundy font-semibold rounded-lg hover:bg-vg-gray-light transition-colors duration-200"
				>
					Request Speaker Info
				</a>
			</div>
		</Section>

		<Footer />
	</body>
</html>
