---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import Icon from '../components/Icon.astro';
import Section from '../components/Section.astro';
import { SITE_TITLE } from '../consts';

const title = `Contact | ${SITE_TITLE}`;
const description = 'Get in touch with Virtual Genius for EventStorming workshops, DDD training, or coaching services.';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
	</head>
	<body class="bg-white">
		<Header />

		<!-- Hero -->
		<Hero>
			<div class="text-center max-w-3xl mx-auto">
				<h1 class="text-4xl md:text-6xl font-bold mb-6 text-vg-burgundy">
					Get in Touch
				</h1>
				<p class="text-xl mb-8 text-vg-gray-dark">
					Ready to explore EventStorming, DDD training, or coaching for your team? Let's start a conversation.
				</p>
			</div>
		</Hero>

		<!-- Contact Methods -->
		<Section>
			<div class="max-w-4xl mx-auto">
				<div class="grid grid-cols-1 md:grid-cols-2 gap-12">
					<!-- Email -->
					<div class="text-center md:text-left">
						<div class="bg-vg-red text-white rounded-full w-16 h-16 flex items-center justify-center mx-auto md:mx-0 mb-6">
							<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
							</svg>
						</div>
						<h2 class="text-2xl font-semibold mb-4 text-vg-burgundy">Email</h2>
						<p class="text-vg-gray-dark mb-4">
							Send us an email and we'll get back to you within 1 business day.
						</p>
						<a
							href="mailto:info@virtualgenius.com"
							class="text-xl font-semibold text-vg-red hover:text-vg-red-light"
						>
							info@virtualgenius.com
						</a>
					</div>

					<!-- Social -->
					<div class="text-center md:text-left">
						<div class="bg-vg-red text-white rounded-full w-16 h-16 flex items-center justify-center mx-auto md:mx-0 mb-6">
							<svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
								<path d="M12 0c-6.627 0-12 5.373-12 12s5.373 12 12 12 12-5.373 12-12-5.373-12-12-12zm-2 16h-2v-6h2v6zm-1-6.891c-.607 0-1.1-.496-1.1-1.109 0-.612.492-1.109 1.1-1.109s1.1.497 1.1 1.109c0 .613-.493 1.109-1.1 1.109zm8 6.891h-1.998v-2.861c0-1.881-2.002-1.722-2.002 0v2.861h-2v-6h2v1.093c.872-1.616 4-1.736 4 1.548v3.359z"/>
							</svg>
						</div>
						<h2 class="text-2xl font-semibold mb-4 text-vg-burgundy">Connect Online</h2>
						<p class="text-vg-gray-dark mb-4">
							Follow along and connect with Paul on social media.
						</p>
						<div class="flex flex-col space-y-3">
							<a
								href="https://www.linkedin.com/in/thepaulrayner/"
								target="_blank"
								rel="noopener noreferrer"
								class="inline-flex items-center text-vg-red hover:text-vg-red-light font-semibold justify-center md:justify-start"
							>
								<svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
									<path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
								</svg>
								LinkedIn
							</a>
							<a
								href="https://twitter.com/thepaulrayner"
								target="_blank"
								rel="noopener noreferrer"
								class="inline-flex items-center text-vg-red hover:text-vg-red-light font-semibold justify-center md:justify-start"
							>
								<svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
									<path d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z"/>
								</svg>
								Twitter
							</a>
							<a
								href="https://github.com/paulrayner"
								target="_blank"
								rel="noopener noreferrer"
								class="inline-flex items-center text-vg-red hover:text-vg-red-light font-semibold justify-center md:justify-start"
							>
								<svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
									<path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
								</svg>
								GitHub
							</a>
						</div>
					</div>
				</div>
			</div>
		</Section>

		<!-- What to Include -->
		<Section background="gray">
			<h2 class="text-3xl md:text-4xl font-bold mb-8 text-center text-vg-burgundy">
				What to Include in Your Message
			</h2>
			<div class="max-w-4xl mx-auto">
				<p class="text-lg text-vg-gray-dark mb-8 text-center">
					To help us understand your needs and respond effectively, please include:
				</p>
				<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
					<div class="bg-white p-6 rounded-lg shadow-md">
						<h3 class="text-xl font-semibold mb-3 text-vg-red">Service Interest</h3>
						<p class="text-vg-gray-dark">
							What are you interested in? EventStorming workshop, DDD training, coaching, or a combination?
						</p>
					</div>
					<div class="bg-white p-6 rounded-lg shadow-md">
						<h3 class="text-xl font-semibold mb-3 text-vg-red">Team Context</h3>
						<p class="text-vg-gray-dark">
							Tell us about your team size, technical background, and current DDD experience level.
						</p>
					</div>
					<div class="bg-white p-6 rounded-lg shadow-md">
						<h3 class="text-xl font-semibold mb-3 text-vg-red">Challenge or Goal</h3>
						<p class="text-vg-gray-dark">
							What specific challenges are you facing? What do you hope to achieve?
						</p>
					</div>
					<div class="bg-white p-6 rounded-lg shadow-md">
						<h3 class="text-xl font-semibold mb-3 text-vg-red">Timeline</h3>
						<p class="text-vg-gray-dark">
							When are you looking to get started? Any important deadlines or constraints?
						</p>
					</div>
				</div>
			</div>
		</Section>

		<!-- Quick Links -->
		<Section>
			<h2 class="text-3xl md:text-4xl font-bold mb-8 text-center text-vg-burgundy">
				Explore Our Services
			</h2>
			<div class="max-w-5xl mx-auto grid grid-cols-1 md:grid-cols-3 gap-6">
				<a
					href="/services/eventstorming"
					class="bg-vg-gray-light p-6 rounded-lg hover:shadow-lg transition-shadow duration-200 block text-center"
				>
					<h3 class="text-xl font-semibold mb-3 text-vg-burgundy">EventStorming Workshops</h3>
					<p class="text-vg-gray-dark mb-4">
						2-day facilitated sessions for exploring complex domains
					</p>
					<span class="inline-flex items-center gap-1 text-vg-red font-semibold">
						Learn More
						<Icon name="arrow-right" size="sm" />
					</span>
				</a>
				<a
					href="/services/training"
					class="bg-vg-gray-light p-6 rounded-lg hover:shadow-lg transition-shadow duration-200 block text-center"
				>
					<h3 class="text-xl font-semibold mb-3 text-vg-burgundy">DDD Training</h3>
					<p class="text-vg-gray-dark mb-4">
						Essential and Strategic Domain-Driven Design courses
					</p>
					<span class="inline-flex items-center gap-1 text-vg-red font-semibold">
						Learn More
						<Icon name="arrow-right" size="sm" />
					</span>
				</a>
				<a
					href="/services/coaching"
					class="bg-vg-gray-light p-6 rounded-lg hover:shadow-lg transition-shadow duration-200 block text-center"
				>
					<h3 class="text-xl font-semibold mb-3 text-vg-burgundy">Coaching & Consulting</h3>
					<p class="text-vg-gray-dark mb-4">
						Ongoing support for pilot projects and implementation
					</p>
					<span class="inline-flex items-center gap-1 text-vg-red font-semibold">
						Learn More
						<Icon name="arrow-right" size="sm" />
					</span>
				</a>
			</div>
		</Section>

		<!-- Other Resources -->
		<Section background="gray">
			<div class="max-w-4xl mx-auto text-center">
				<h2 class="text-3xl md:text-4xl font-bold mb-6 text-vg-burgundy">
					Additional Resources
				</h2>
				<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
					<a
						href="/products"
						class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-200 block"
					>
						<h3 class="text-xl font-semibold mb-3 text-vg-burgundy">Open Source Products</h3>
						<p class="text-vg-gray-dark mb-4">
							Explore ContextFlow and CodeCohesion, our free DDD visualization tools
						</p>
						<span class="inline-flex items-center gap-1 text-vg-red font-semibold">
							View Products
							<Icon name="arrow-right" size="sm" />
						</span>
					</a>
					<a
						href="/blog"
						class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-200 block"
					>
						<h3 class="text-xl font-semibold mb-3 text-vg-burgundy">Blog</h3>
						<p class="text-vg-gray-dark mb-4">
							Read our latest insights on DDD, EventStorming, and software design
						</p>
						<span class="inline-flex items-center gap-1 text-vg-red font-semibold">
							Read Blog
							<Icon name="arrow-right" size="sm" />
						</span>
					</a>
				</div>
				<div class="mt-8">
					<p class="text-vg-gray-dark">
						For more personal content from Paul, visit
						<a
							href="https://thepaulrayner.com"
							target="_blank"
							rel="noopener noreferrer"
							class="text-vg-red hover:text-vg-red-light font-semibold"
						>
							thepaulrayner.com
						</a>
					</p>
				</div>
			</div>
		</Section>

		<Footer />
	</body>
</html>
