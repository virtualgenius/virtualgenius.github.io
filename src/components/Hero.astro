---
interface Props {
	class?: string;
	dark?: boolean;
	size?: 'full' | 'compact';
}

const { class: className = '', dark = false, size = 'full' } = Astro.props;

const backgroundStyles = dark
	? 'bg-vg-burgundy-dark text-white'
	: 'bg-gradient-to-br from-white to-vg-gray-light';

const sizeStyles = size === 'full'
	? 'py-16 md:py-20 min-h-[400px] md:min-h-[600px]'
	: 'py-8 md:py-16';
---

<section class={`relative ${backgroundStyles} ${sizeStyles} flex items-center ${className}`}>
	<div class="max-w-screen-xl mx-auto px-6 w-full">
		<slot />
	</div>
</section>
