---
interface Props {
	class?: string;
	dark?: boolean;
}

const { class: className = '', dark = false } = Astro.props;

const backgroundStyles = dark
	? 'bg-vg-burgundy-dark text-white'
	: 'bg-gradient-to-br from-white to-vg-gray-light';
---

<section class={`relative ${backgroundStyles} py-16 md:py-24 min-h-[800px] md:min-h-screen flex items-center ${className}`}>
	<div class="max-w-screen-xl mx-auto px-6 w-full">
		<slot />
	</div>
</section>
