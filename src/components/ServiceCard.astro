---
import Card from './Card.astro';

interface Props {
	title: string;
	description: string;
	href: string;
	linkText?: string;
	image?: string;
	imageAlt?: string;
}

const { title, description, href, linkText = 'Learn More', image, imageAlt } = Astro.props;
---

{image ? (
	<!-- Image-based card -->
	<div class="bg-white rounded-lg shadow-lg border-t-4 border-vg-red overflow-hidden flex flex-col h-full">
		<div class="relative h-40 md:h-48 overflow-hidden flex-shrink-0">
			<img
				src={image}
				alt={imageAlt || title}
				class="w-full h-full object-cover"
			/>
		</div>
		<div class="p-6 md:p-8 flex-grow flex flex-col">
			<h3 class="text-2xl font-semibold mb-4 text-vg-burgundy">{title}</h3>
			<p class="text-vg-gray-dark mb-6 flex-grow">{description}</p>
			<a href={href} class="text-vg-red hover:text-vg-red-light font-semibold inline-flex items-center">
				{linkText}
				<svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
				</svg>
			</a>
		</div>
	</div>
) : (
	<!-- Text-only card (legacy) -->
	<Card class="flex flex-col h-full">
		<h3 class="text-2xl font-semibold mb-4 text-vg-burgundy">{title}</h3>
		<p class="text-vg-gray-dark mb-6 flex-grow">{description}</p>
		<a href={href} class="text-vg-red hover:text-vg-red-light font-semibold inline-flex items-center">
			{linkText}
			<svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
			</svg>
		</a>
	</Card>
)}
