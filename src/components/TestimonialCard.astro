---
interface Props {
	quote: string;
	role: string;
	industry: string;
	rating: number;
	workshop: string;
	class?: string;
}

const { quote, role, industry, rating, workshop, class: className = '' } = Astro.props;

// Generate star rating visualization
const stars = Array.from({ length: 10 }, (_, i) => i < rating);
---

<div class={`bg-white p-8 rounded-2xl shadow-lg hover:shadow-xl transition-shadow duration-300 ${className}`}>
	<div class="mb-6">
		<svg class="w-12 h-12 text-vg-red mb-4" fill="currentColor" viewBox="0 0 24 24">
			<path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"/>
		</svg>
		<p class="text-lg md:text-xl text-vg-gray-dark leading-relaxed italic">
			"{quote}"
		</p>
	</div>

	<div class="border-t border-vg-gray-light pt-6">
		<div class="flex items-center gap-1 mb-3 flex-wrap">
			{stars.map(filled => (
				<span class={filled ? 'text-vg-amber' : 'text-vg-gray-light'}>
					<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
						<path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
					</svg>
				</span>
			))}
			<span class="ml-1 text-vg-gray-dark font-semibold">{rating}/10</span>
		</div>

		<p class="text-vg-gray-dark font-medium mb-1">
			{role}
		</p>
		<p class="text-vg-gray text-sm mb-2">
			{industry}
		</p>
		<p class="text-vg-red text-sm font-semibold">
			{workshop}
		</p>
	</div>
</div>
