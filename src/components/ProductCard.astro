---
import Card from './Card.astro';

interface Props {
	title: string;
	description: string;
	demoUrl?: string;
	githubUrl?: string;
	detailsUrl?: string;
}

const { title, description, demoUrl, githubUrl, detailsUrl } = Astro.props;
---

<Card class="flex flex-col h-full">
	<h3 class="text-2xl font-semibold mb-4 text-vg-burgundy">{title}</h3>
	<p class="text-vg-gray-dark mb-6 flex-grow">{description}</p>
	<div class="flex flex-wrap gap-3">
		{demoUrl && (
			<a href={demoUrl} target="_blank" rel="noopener noreferrer" class="text-vg-red hover:text-vg-red-light font-semibold">
				View Demo →
			</a>
		)}
		{githubUrl && (
			<a href={githubUrl} target="_blank" rel="noopener noreferrer" class="text-vg-gray hover:text-vg-gray-dark font-semibold">
				GitHub →
			</a>
		)}
		{detailsUrl && (
			<a href={detailsUrl} class="text-vg-burgundy hover:text-vg-red font-semibold">
				Learn More →
			</a>
		)}
	</div>
</Card>
