---
interface Props {
	title: string;
	dates: string;
	format: string;
	description: string;
	registrationUrl: string;
	earlyBirdDeadline?: string;
}

const { title, dates, format, description, registrationUrl, earlyBirdDeadline } = Astro.props;
---

<div class="bg-white rounded-2xl shadow-lg border border-vg-gray-light overflow-hidden hover:shadow-xl transition-shadow duration-300">
	<div class="p-6 md:p-8">
		<div class="flex items-start justify-between mb-4">
			<h3 class="text-2xl font-bold text-vg-burgundy">{title}</h3>
			<span class="inline-block px-3 py-1 bg-vg-red/10 text-vg-red text-sm font-semibold rounded-full">
				{format}
			</span>
		</div>

		<div class="mb-6">
			<div class="flex items-center gap-2 text-vg-gray-dark mb-2">
				<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
				</svg>
				<span class="font-semibold">{dates}</span>
			</div>
			{earlyBirdDeadline && (
				<p class="text-sm text-vg-amber font-medium">
					Early bird pricing ends {earlyBirdDeadline}
				</p>
			)}
		</div>

		<p class="text-vg-gray-dark mb-6 leading-relaxed">
			{description}
		</p>

		<a
			href={registrationUrl}
			target="_blank"
			rel="noopener noreferrer"
			class="inline-block w-full text-center px-6 py-3 bg-vg-red text-white font-semibold rounded-lg hover:bg-vg-burgundy transition-colors duration-200"
		>
			Register Now
		</a>
	</div>
</div>
