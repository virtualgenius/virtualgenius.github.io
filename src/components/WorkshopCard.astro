---
interface Props {
	title: string;
	dates: string;
	format: string;
	description: string;
	registrationUrl: string;
	price: string;
	duration: string;
	targetAudience: string;
	learningOutcomes: string[];
	earlyBirdDeadline?: string;
}

const { title, dates, format, description, registrationUrl, price, duration, targetAudience, learningOutcomes, earlyBirdDeadline } = Astro.props;
---

<div class="bg-white rounded-2xl shadow-lg border border-vg-gray-light overflow-hidden hover:shadow-xl transition-shadow duration-300">
	<div class="p-6 md:p-8">
		<div class="flex items-start justify-between mb-4">
			<h3 class="text-2xl font-bold text-vg-burgundy">{title}</h3>
			<span class="inline-block px-3 py-1 bg-vg-red/10 text-vg-red text-sm font-semibold rounded-full">
				{format}
			</span>
		</div>

		<div class="mb-6 space-y-2">
			<div class="flex items-center gap-2 text-vg-gray-dark">
				<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
				</svg>
				<span class="font-semibold">{dates}</span>
			</div>
			<div class="flex items-center gap-2 text-vg-gray-dark">
				<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
				</svg>
				<span class="font-semibold">{price}</span>
			</div>
			<div class="flex items-center gap-2 text-vg-gray-dark">
				<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
				</svg>
				<span>{duration}</span>
			</div>
			<div class="flex items-center gap-2 text-vg-gray-dark">
				<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
				</svg>
				<span><span class="font-semibold">For:</span> {targetAudience}</span>
			</div>
			{earlyBirdDeadline && (
				<p class="text-sm text-vg-amber font-medium">
					Early bird pricing ends {earlyBirdDeadline}
				</p>
			)}
		</div>

		<p class="text-vg-gray-dark mb-6 leading-relaxed">
			{description}
		</p>

		<div class="mb-6">
			<h4 class="font-semibold text-vg-burgundy mb-3">What You'll Learn:</h4>
			<ul class="space-y-2">
				{learningOutcomes.map(outcome => (
					<li class="flex items-start gap-2 text-vg-gray-dark">
						<svg class="w-5 h-5 text-vg-red flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
						</svg>
						<span>{outcome}</span>
					</li>
				))}
			</ul>
		</div>

		<a
			href={registrationUrl}
			target="_blank"
			rel="noopener noreferrer"
			class="inline-block w-full text-center px-6 py-3 bg-vg-red text-white font-semibold rounded-lg hover:bg-vg-burgundy transition-colors duration-200"
			onclick={`if (window.gtag) { gtag('event', 'workshop_registration_click', { 'workshop_name': '${title}', 'workshop_date': '${dates}', 'link_location': 'workshops_page', 'value': ${parseFloat(price.replace(/[$,]/g, '').split(' ')[0])} }); }`}
		>
			View Details & Register
		</a>
	</div>
</div>
