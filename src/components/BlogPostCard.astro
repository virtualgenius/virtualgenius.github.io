---
import Card from './Card.astro';
import FormattedDate from './FormattedDate.astro';

interface Props {
	title: string;
	description: string;
	pubDate: Date;
	href: string;
}

const { title, description, pubDate, href } = Astro.props;
---

<Card class="flex flex-col h-full group hover:scale-105 transition-transform duration-200 relative">
	<div class="text-vg-gray text-sm mb-2">
		<FormattedDate date={pubDate} />
	</div>
	<h3 class="text-xl font-semibold mb-3 text-vg-burgundy">
		<a href={href} class="after:absolute after:inset-0 hover:text-vg-red transition-colors">
			{title}
		</a>
	</h3>
	<p class="text-vg-gray-dark mb-4 flex-grow line-clamp-3">{description}</p>
	<span class="text-vg-red group-hover:text-vg-red-light font-semibold inline-flex items-center pointer-events-none" aria-hidden="true">
		Read More
		<svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
			<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
		</svg>
	</span>
</Card>
