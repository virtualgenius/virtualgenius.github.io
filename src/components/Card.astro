---
interface Props {
	class?: string;
}

const { class: className = '' } = Astro.props;

const baseStyles = 'bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow duration-200';
const accentStyles = 'border-t-4 border-vg-red';
---

<div class={`${baseStyles} ${accentStyles} ${className} p-6`}>
	<slot />
</div>
